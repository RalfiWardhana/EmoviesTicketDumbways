<%- include("partials/header") %>
<%- include("partials/navbar") %>

<div id="carouselExampleFade" class="carousel slide carousel-fade" data-bs-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="avengers.jpg" class="d-block w-100" alt="avvengers" height="650px">
    </div>
    <div class="carousel-item">
      <img src="harpot.jpg" class="d-block w-100" alt="harry potter" height="650px">
    </div>
    <div class="carousel-item">
      <img src="avatar.jpg" class="d-block w-100" alt="avatar" height="650px" >
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>

<% if (isLogin == true) { %>
  <div class="container mt-5 mb-5">
    <div class="shadow-lg p-5 mb-5 bg-body rounded">
        <form action="/" method="POST"> 
        <H1>Search Movies</H1>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Movies genre</label>
            <input type="text" class="form-control" id="exampleInputEmail1" name="movieGenre">
        </div>
        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Movie Title</label>
            <input type="text" class="form-control" id="exampleInputPassword1" name="movieName">
        </div>
        
        <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input" id="exampleCheck1">
            <label class="form-check-label" for="exampleCheck1">Check me out</label>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

  <% if (movieShow == true) { %>
      <div class="container mt-5 mb-5">
        <div class="row justify-content-center mb-5">
          <% for( let i = 0; i < results.length; i++ ) { %> 
          <div class="col mb-3">
            <div class="card" style="width: 18rem; display: inline-block;">
              <img src="<%= results[i].photo %>" class="card-img-top" alt="...">
              <div class="card-body">
                <h5 class="card-title"><%= results[i].name %></h5>
                <p class="card-text"><%= results[i].movie_hour %></p>
                <a href="/pesan-payment/<%= results[i].name %>" class="btn btn-primary">Buy Ticket</a>
                <% if (admin == true) { %>
                  <a href="/edit/<%= results[i].id %>" class="btn btn-success">Change Movie</a>
                  <a href="/delete/<%= results[i].id %>" class="btn btn-danger mt-3">Delete Movie</a>
                <% } %>
              </div>
            </div>
          </div>
          <% } %>
        </div>
      </div>
  <% } %> 
<% } %>



<%- include("partials/footer") %>